---
import Button from "./Button.astro";

const preTitle = "PRE TÍTULO";
const title = "TÍTULO PRINCIPAL";
const backgroundImage = "https://source.unsplash.com/random/1600x900";
---

<header class="hero" style={`background-image: url('${backgroundImage}')`}>
  <div class="hero-content">
    <p class="pre-title">{preTitle}</p>
    <h1 class="title">{title}</h1>
    <Button text="Descubre más" />
  </div>
</header>

<style>
  .hero {
    height: 80vh;
    background-size: cover;
    background-position: center;
    display: flex;
    justify-content: center;
    align-items: flex-end;
    padding: 0 2rem;
  }

  .hero-content {
    max-width: 600px;
  }

  .pre-title {
    font-size: 1.25rem;
    font-weight: bold;
    text-transform: uppercase;
    color: #fff;
    margin-bottom: 0.5rem;
  }

  .title {
    font-size: 2.5rem;
    font-weight: bold;
    text-transform: uppercase;
    color: #fff;
    margin-bottom: 1.5rem;
  }

  @media (max-width: 768px) {
    .pre-title {
      font-size: 1rem;
    }

    .title {
      font-size: 2rem;
    }
  }
</style>
