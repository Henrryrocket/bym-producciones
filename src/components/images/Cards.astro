---
import { createSignal } from "solid-js";
---

<style>
  @keyframes border-glow {
    0% {
      border-color: transparent;
    }
    100% {
      border-color: #00f;
    }
  }
</style>

<div
  class="flex flex-col md:flex-row justify-center items-center space-y-4 md:space-y-0 md:space-x-4 p-4"
>
  {
    Array(3)
      .fill()
      .map((_, index) => (
        <a
          href="#"
          key={index}
          class="relative block w-full md:w-1/3 bg-white shadow-md rounded-lg overflow-hidden transform transition duration-300 hover:scale-105 group"
        >
          <div class="absolute inset-0 border-2 border-transparent group-hover:animate-[border-glow_1s_forwards]" />
          <img
            src={`https://via.placeholder.com/400x300?text=Image+${index + 1}`}
            alt={`Image ${index + 1}`}
            class="w-full h-full object-cover"
          />
        </a>
      ))
  }
</div>
